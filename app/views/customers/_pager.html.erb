<nav>
  <ul class="pager">
    <li class="previous <%= page == 0 ? 'disabled' : '' %>">
      <%= link_to_if page > 0, "&larr; Previous".html_safe, 
          customers_path(keywords: keywords, page: page - 1) %>
    </li> 
    <% (0..@total_pages).each do |page_list| %>
      <span class="<%= page_list == page ? '' : 'disabled'%>">
        <%= link_to "#{page_list + 1}", customers_path(keywords: keywords, page: page_list) %>
      </span>
    <% end %>
    <li class="next <%= page > @total_pages ? 'disabled' : '' %>">
      <%= link_to_if page < @total_pages, "Next &rarr;".html_safe, customers_path(keywords: keywords, page: page + 1) %>
    </li>
  </ul>
</nav>